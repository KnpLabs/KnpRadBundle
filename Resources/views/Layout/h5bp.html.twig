{% extends 'KnpRadBundle:Layout:base.html.twig' %}

{% block headers %}
    <title>{% block title 'Welcome' %}</title>
    <meta name="description" content="{% block description '' %}">
    <meta name="viewport" content="width=device-width">
{% endblock headers %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/knprad/h5bp/css/normalize.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/knprad/h5bp/css/main.css') }}">
    <script src="{{ asset('bundles/knprad/common/js/modernizr-2.6.2.min.js') }}"></script>
{% endblock stylesheets %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/knprad/h5bp/js/plugins.js') }}"></script>
{% endblock javascripts %}

{% block body %}
    <p>Hello world! This is HTML5 Boilerplate.</p>
{% endblock body %}
